{% extends 'admin/base.html.twig' %}


{% block title %}
    Modification de l'annonce
{% endblock %}

{% form_theme form _self %}

{% block body %}

<div class="container-fluid clearfix">
    <h1 class="my-5">Modification de l'annonce {{ad.title}}</h1>

    {{form_start(form)}}

    <div class="row">
        <div class="col">
            <div class="card bg-light">
                <div class="card-header">
                    Corriger l'annonce?
                </div>
                <div class="card-boody">          
                    {{form_widget(form)}}

                    <button type="submit" class="btn btn-primary float-right mb-3">
                        <i class="fas fa-check"></i>
                        Enregistrer les modification
                    </button>
                </div>
            </div>     
        </div>
        <div class="col">
            <div class="card bg-light">
                <div class="card-header">
                    <div class="card-title">Les reservations</div>
                </div>
                <div class="card-boody">          
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Voyageur</th>
                                <th>Date de reservationx</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for booking in ad.bookings %}
                                <tr>
                                    <td>{{booking.id}}</td>
                                    <td>{{booking.booker.fullName}}</td>
                                    <td>{{booking.createdAt | date('d/m/Y H:i')}}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div> 
            <div class="card bg-light mt-5">
                <div class="card-header">
                    <div class="card-title">Les commentaires</div>
                </div>
                <div class="card-boody">          
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Auteur</th>
                                <th>Date de cr√©ation</th>
                                <th>Note</th>
                                <th>Commentaire</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for comment in ad.comments %}
                                <tr>
                                    <td>{{comment.id}}</td>
                                    <td>{{comment.author.fullName}}</td>
                                    <td>{{comment.createdAt | date('d/m/Y H:i')}}</td>
                                    <td>{{comment.rating}}</td>
                                    <td>{{comment.content}}</td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <i class="fas fa-pen"></i>
                                            Edit
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div> 
        </div>
    </div>
    {{form_end(form)}}

</div>
{% endblock %}

{% block _annonce_images_widget %}
    {{ form_widget(form) }}
{% endblock %}

{% block _annonce_images_entry_row %} 
    <div id="block_{{id}}">
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block _annonce_images_entry_widget %}
    <div class="row align-items-center mb-3">
        <div class="col-4">
            {# {{form_row(form.url)}} #}
            {% if value %}
                <img src="{{value.url}}" alt="" class="img-fluid">
            {% endif %}
        </div>
        <div class="col-6">
            {{form_row(form.caption)}}
        </div>
        <div class="col">
            <button class="button btn btn-danger" data-action="delete" data-target="#block_{{id}}">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    <script>
         $(function(){
             $('[data-action="delete"]').on('click', function(){
                 const target = this.dataset.target;
                 //console.log(target);
                 $(target).remove();
             });
         });
    </script>

{% endblock %}
